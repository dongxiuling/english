<!--pages/put_art/put_art.wxml-->
<view class='user' wx:for='{{article}}'>
  <image src='{{head_url}}'></image>
  <view class='user_info'>
    <view>自己</view>
    <view class='time'>{{item.date}}</view>
  </view>
</view>
<view class='put' wx:for='{{article}}'>
  <view class='write' bindtap='put_cont'>{{item.content}}</view>
  <view class='img' bindtap='put_img'>
      <image src="{{item.img_url}}"></image>
  </view>
  <view class='tab_list'>
      <view class='tab'>
        <text class="iconfont icon-dianzan {{item.flag}}" bindtap='zan'>{{item.hits}}赞</text>
      </view>
      <view class='tab'>
        <text class="iconfont icon-msnui-share">分享</text>
      </view>
  </view>
</view>
<view class='com_title'>评论区</view>
<scroll-view class='com_area'>
  <view class='comment' wx:for='{{comments}}'>
    <view class='com_user'>
      <image src='{{head_url}}'></image>
      <view class='com_user_info'> 
        <view>{{item.user_name}}</view>
        <view class='time'>{{item.date}}</view> 
      </view> 
    </view>
    <view class='com_cont'>{{item.content}}</view>
    <view class='com_tab'>
        <text class="iconfont icon-dianzan">{{item.hits}}赞</text>
    </view>
  </view>
</scroll-view>
<button class='iconfont icon-bi' bindtap='bindReply'>评 论</button>
<view class="release" hidden="{{!releaseFocus}}">
  <textarea class="text"
  placeholder-class="input_null"
  fixed="true"
  maxlength="-1"
  show-confirm-bar="false"
  cursor-spacing="15"
  auto-height="true"
  focus="{{releaseFocus}}"
  placeholder="回复 {{releaseName}}"
  bindinput='com_input'>
  </textarea>
  <view class="submit" bindtap='ping'>发送</view>
</view>

