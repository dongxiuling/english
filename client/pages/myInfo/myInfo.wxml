<!--pages/myInfo/myInfo.wxml-->  
<view class='info-container'>  
  <view class='left-content' bindtap='to_private_message'>
     <image src='{{userInfo.logo_url}}' class='touxiang'></image>
  </view> 
  <view class='right-content'>
     <text class='name' bindtap='to_login'>{{userInfo.user_name}}</text>
     <text class='number'>{{userInfo.user_id}}</text>
     <view class='line'></view>
     <view class='money'>
        <view class='money-left-content'>
            <image src='qiandao.png' bindtap='qiandao'></image>
            <view class='qiandao' bindtap='qiandao'>打卡<text>{{userInfo.day}}</text>天</view>
        </view>
        <view class='money-right-content' bindtap='to_money'>
          <image src='coin.png'></image>
          <view class='coin'>金币<text>{{userInfo.coin}}</text>个</view>
     </view>
</view>
  </view>
</view>

<view class='my_product'>
    <view class='product_item' bindtap='to_articles'>
       <image src='article.png' bindtap='qiandao'></image>
       <text>我的文章</text>
       <view class="article-arrow"></view>
       <view class='list-line'></view>
    </view>
    <view class='product_item' bindtap='to_notes'>
       <image src='note.png' bindtap='qiandao'></image>
       <text>我的笔记</text>
       <view class="article-arrow"></view>
       <view class='list-line'></view>
    </view>
    <view class='product_item' bindtap='to_attention'>
       <image src='heart.png' bindtap='qiandao'></image>
       <text>文字收藏</text>
       <view class="article-arrow"></view>
       <view class='list-line'></view>
    </view>
    <view class='product_item fans' bindtap='to_fans'>
       <image src='star.png' bindtap='qiandao'></image>
       <text>语音收藏</text>
       <view class="article-arrow"></view>
    </view>
</view>
<view class='help'>
    <view class='help_item' bindtap='to_help'>
      <image src='help.png'></image>
      <text> 意见反馈</text>
      <view class="article-arrow"></view>
      <view class='list-line'></view>
    </view>
    <view class='help_item about' bindtap='to_aboutus'>
     <image src='about.png'></image>
     <text>关于我们</text>
      <view class="article-arrow"></view>
     <view class='list-line'></view>
    </view>
</view>
