/* pages/myInfo/myInfo.wxss */
page{
   background: #eeeeee;
}
.info-container{
  background: #fff;
  border-top: 1px solid #ccc;
  height: 200rpx;
  display: flex;
  margin-bottom: 20rpx;
}
.left-content{
  flex-flow: 1;
}
.right-content{
  flex-grow: 2; 
  padding: 50rpx 20rpx;
}
.left-content{
  height: 200rpx;
  padding: 50rpx 20rpx;
}
.touxiang{
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #ccc; 
  border-radius: 50%;
}
.name{
  display: block;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.number{
  display: block;
  font-size: 28rpx;
  color: #ccc;
}
.money{
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding-top: 10rpx; 
  margin-bottom: 20rpx;
}
.money-left-content,.money-right-content{
  flex-grow: 1;
  text-align: center;
  font-size: 28rpx;
  position: relative;
  padding-right:100rpx; 
}
.money-left-content{
  border-right: 1px solid #ccc;
}
.money image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.qiandao,.coin{
  position: absolute;
  top: 0;
}
.my_product{
  height: 200rpx;
  background: #fff;
  padding: 25rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.product_item{
  width: 150rpx;
  height: 150rpx;
  float: left;
  text-align: center; 
  border-radius: 50%;
  background: #eee;
  margin-right: 35rpx;
  font-size: 32rpx;
  line-height: 150rpx;
}
.fans{
  margin-right:0; 
}
.help{
  height: 500rpx;
  background: #fff;
  padding: 50rpx 25px;
  box-sizing: border-box;
}
.help_item{
  height: 100rpx;
  margin-bottom:50rpx; 
  font-size: 32rpx;
  position: relative;
}
.help_item text{
  position: absolute;
  right: 0;
  margin-top:-6rpx; 
  font-size: 40rpx;
  color: #ccc;
}
