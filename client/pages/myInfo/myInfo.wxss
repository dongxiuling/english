/* pages/myInfo/myInfo.wxss */
page{
   background: #eeeeee; 
   color: #515151;
}
.info-container{
  background: #fff;
  border-top: 1px solid #ccc;
  height: 300rpx;
  display: flex;
  margin-bottom: 20rpx;
}
.left-content{
  flex-flow: 1;
}
.right-content{
  flex-grow: 2; 
  padding: 58rpx 20rpx;
}
.left-content{
  height: 200rpx;
  padding: 50rpx 20rpx;
}
.touxiang{
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #ccc; 
  border-radius: 50%;
}
.name{
  display: block;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}
.number{
  display: block;
  font-size: 24rpx;
  color: #ccc;
   /* border-bottom: 1px solid #b3e5ff;  */
  padding-bottom: 20rpx;
}
.line{
    width:100%;
    height:1px;
    background:#b3e5ff;
    transform: scaleY(0.5);
}
.list-line{
    width:100%;
    height:1px;
    background:#dddddd;
    transform: scaleY(0.5);
    position:absolute;
    bottom:0px;
    left:0px;
}
.money{
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding-top: 4rpx; 
  margin-bottom: 20rpx;
}

.money-right-content{

   flex-grow: 1;
   font-size: 24rpx;
   position: relative;
   padding-left:40rpx; 
}
.money-left-content
{
  flex-grow: 1;
  font-size: 24rpx;
  position: relative;
  border-right: 1px solid #b3e5ff;
}
.money image{
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}
.qiandao{
  position: absolute;
  top: 0;
  left: 50rpx;
}
.qiandao text{
  color: #2ac395;
}
.coin{
  position: absolute;
  top: 0;
  left: 100rpx;
}
.coin text{
  color: #2ac395;
}
.my_product{
  height: 352rpx;
  background: #fff;
  padding:0 25rpx ;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}
.product_item{
  flex-grow: 1;
  font-size: 24rpx;
  /* border-bottom: 1px solid #ccc; */
  line-height: 88rpx;
  position: relative;
  
}
.product_item text{
  margin-left: 80rpx;
}
.product_item image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top:50%;
  margin-top: -20rpx;
}
.product_item view{
  font-size: 40rpx;
  color: #ccc;
  float:right;
}
.fans{
   border-bottom:none;
}
.help{
  height: 176rpx;
  background: #fff;
  padding: 0 25rpx;
  display: flex;
  flex-direction: column;
}
.help_item{
  flex-grow: 1;
  line-height:88rpx; 
  font-size: 24rpx;
  position: relative;
  /* border-bottom: 1px solid #ccc; */
}
.about{
  border-bottom: none;
}
.help_item text{
  margin-left: 80rpx;
}
.help_item image{
  position: absolute;
  top:50%;
  margin-top: -20rpx;
  width: 40rpx;
  height: 40rpx;
}
.help_item view{
  color: #ccc;
  font-size: 40rpx;
  float: right;
}
.article-arrow{
    border-right:1rpx solid;
    border-bottom:1rpx solid;
    width:16rpx;
    height:16rpx;
    transform:rotate(-45deg);
    float:right;
    position:absolute;
    right:10rpx;
    top:50%;
    margin-top:-8rpx;

}