/* pages/attention/attention.wxss */
page{
  background-color: #eee;
}
/*笔记开始*/
.note_list{
  background: #eee;
}
.note{
  position: relative;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  height: 220rpx;
}
.head{
  margin-top:-60rpx;
  margin-bottom:30rpx; 
  width: 150rpx;
  height: 150rpx;  
}
.head image{
  margin-left:30rpx;
  margin-top:15rpx;  
  width: 150rpx;
  height: 150rpx;
  border-radius:5px;
} 
.cont{
  margin-left:180rpx;
  margin-top:-150rpx;
  padding:20rpx 30rpx;
  font-size:28rpx;
  line-height:60rpx;
  color:#666666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.tab_list{
  background: #ffffff;
  overflow: hidden;
  margin-left:180rpx; 
  margin-top:10rpx; 
}
.tab_list .name{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #2ac395;
  margin-left:30rpx; 
  float: left; 
}
.tab_list .time{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #d0d0d0;
  margin-left:10rpx;  
  float: left; 
}
.border{
  position: absolute;
  top:219rpx;
  left: 25rpx;
  width: 700rpx;
  height: 1rpx;
  background-color:#eee; 
}
/*笔记结束*/
