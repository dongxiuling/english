.tab_list{
  background: #ffffff;
  overflow: hidden;
  margin-left:180rpx; 
  margin-top:10rpx; 
}
.tab_list .name{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #2ac395;
  margin-left:30rpx; 
  float: left; 
}
.tab_list .time{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #d0d0d0;
  margin-left:10rpx;  
  float: left; 
}
.head{
  margin-top:-60rpx;
  margin-bottom:30rpx; 
  width: 150rpx;
  height: 150rpx;  
}
.head image{
  margin-left:30rpx;
  margin-top:15rpx;  
  width: 150rpx;
  height: 150rpx;
  border-radius:5px;
} 
.border{
  position: absolute;
  top:219rpx;
  left: 25rpx;
  width: 700rpx;
  height: 1rpx;
  background-color:#eee; 
}
