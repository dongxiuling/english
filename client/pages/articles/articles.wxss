/* 页面 */
page{
  background: #eee;
}
.tip{
  color: #000;
  font-size: 32rpx;
  text-align: center;
  margin-top: 20rpx;
}
/* 文章 */
.art_list{
  background: #eee;
}
.art{
  position: relative;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  height: 220rpx;
}
.cont{
  margin-left:180rpx;
  margin-top:-150rpx;
  padding:20rpx 30rpx;
  font-size:36rpx;
  line-height:60rpx;
  color:#666666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
