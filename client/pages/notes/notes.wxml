<!--pages/notes/notes.wxml-->
<scroll-view class='note_list' scroll-y='true'>
    <view class='note' wx:for='{{notes}}'>
      <view class='cont' bindtap='toPut_note'>
        <view>{{item.content}}</view>
        <view class='img'>
          <image src="{{item.img_url}}"></image>
        </view>
      </view>
      <view class='tab_list'>
        <view class='time' bindtap='toPut_note'>
        {{item.date}}
        </view>
        <view class='tab'>
          <text class="iconfont icon-dianzan">{{item.hits}}赞</text>
        </view>
        <view class='tab'>
          <text class="iconfont icon-pinglun">评论</text>
        </view>
        <view class='tab'>
          <text class="iconfont icon-msnui-share">分享</text>
        </view>
      </view>
    </view> 
</scroll-view>