/* pages/money/money.wxss */
page
{
  height: 100%;
  background: #eee;
  display: flex;
  flex-direction:column; 
}
.head
{
  height: 100rpx;
  background: #fff;
  display: flex;
  flex-direction:row; 
  align-items: center;
  text-align: center;
  border-bottom: 2px solid #eee;
}
.icon-back
{
  margin-left:16rpx; 
  float: left;
  font-size: 52rpx; 
  color: #eee;
  flex: 1;
  margin: 0;
}
.title
{
  flex: 5;
  font-size:40rpx;
}
.hide
{
  flex: 1;
}
.body
{
  background: #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}
.money
{
  width: 100%;
  height: 240rpx;
  display: flex;
  background: #2ac395;
  flex-direction: column;
  align-items: center;
  border-bottom:10rpx solid #eee; 
}
.mymoney
{
  margin: 50rpx auto 15rpx;
  display: block;
  text-align: center;
  color: #fff;
}
.num
{
  display: block;
  text-align: center;
  color: #fff;
}
.quduihuan
{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 50%;
}
