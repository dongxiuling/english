/* pages/forum/forum.wxss */
page{
  background: #f2f2f2;
}
.head{
  width: 100%;
 height: 400rpx;
}
.find{
 background: #209e85;
  color: #fff;
}

/* 发布人 */
.index-writer{
  float: left;
  display: flex;
  flex-direction: row;
}
.index-article{
  overflow: hidden;
   display: flex;
  flex-direction: column;
  /* width:90%; */
  margin-top:10rpx;
  /* box-shadow:0px 0px 5px 5px rgba(0, 0, 0, 0.1)  */
  background: #fff;
 
}
.index-name{
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  padding-top: 36rpx;
}

.index-title{
  font-weight:600;
}
.head-port{
  width: 90rpx;
  height: 90rpx;
  margin: 30rpx 20rpx 0 30rpx;
  border-radius: 50%;
}

.content{
  width: 90%;
  height:280rpx;
  border-radius: 10rpx;  
  margin-left: 5%;
  margin-top:160rpx;
  
}
.center{
    text-align: center;   
}
.index-post{
  display: flex;
   justify-content: flex-end;
   padding-right: 30rpx;
   
}
.index-post view{
  width: 80rpx;
  height:60rpx;
  font-size: 24rpx;
  margin: 10rpx 4rpx 10rpx 0;
  text-align: center;
  line-height: 60rpx;
   border: 2rpx solid #d0d0d0; 
  border-radius: 10rpx;  
}


.index-bottom{
  text-align: center;
  color: white;
  background: #d0d0d0 
}

.publish{
  width:100rpx;
  height:100rpx;
  border:2rpx solid white;
  border-radius:50%;
  text-align:center;
  line-height:100rpx;
  z-index:2;
  background:#209E85;
  font-size:30rpx;
  color:white;
  position:fixed;
  bottom:10rpx;
  right:10rpx;
}
.index-pub{
  opacity: 0.5;
}


.atricle-time{
  color: #d0d0d0;
  margin-top:6rpx;
}
.article-content{
  padding:10rpx 30rpx;
  font-size:34rpx;
  color:#666;

}
/* 发布人 */

.tab_list{
  background: #ffffff;
  overflow: hidden;
}
.tab{
  width: 120rpx;
  height: 70rpx;
  float: right;
}
.tab text{
  font-size: 30rpx;
  color: #848484;
}
