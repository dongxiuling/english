/* pages/forum/forum.wxss */
.head{
  width: 100%;
 height: 200px;
}

/* 发布人 */
.index-writer{
  float: left;
  display: flex;
  flex-direction: row;
}
.index-article{
  overflow: hidden;
   display: flex;
  flex-direction: column;
  /* width:90%; */
  margin-top:30px;
  border: 1px solid #d0d0d0;
  /* box-shadow:0px 0px 5px 5px rgba(0, 0, 0, 0.1)  */
 
}
.index-name{
  font-size: 12px;
  display: flex;
  flex-direction: column;
  padding-top: 31px;
}

.index-title{
  font-weight:600;
}
.head-port{
  width: 50px;
  height: 50px;
 margin: 15px 10px 0 15px;
}

.content{
  width: 90%;
  height:150px;
 border-radius: 10rpx;  
  margin-left: 5%;
   margin-top:80px;
  
}
.center{
    text-align: center;
   
}
.index-post{
  display: flex;
   justify-content: flex-end;
   padding-right: 15px;
   
}
.index-post view{
  width: 40px;
  height:30px;
  font-size: 12px;
  margin: 5px 2px 5px 0;
  text-align: center;
  line-height: 30px;
   border: 1px solid #d0d0d0; 
   z-index: -1; 
  border-radius: 10rpx;  
}

.index-bottom{
  text-align: center;
  color: white;
  background: #d0d0d0 
}

.publish{
  width: 80px;
  height: 50px;
  border: 1px solid white;
  border-radius: 50%;
  text-align: center;
  line-height: 50px;
  float: right;
  z-index: 2;
  background:#209E85;
  margin: -20rpx 50rpx 0 0;
  color: white;
}
.index-pub{
  opacity: 0.5;
}
