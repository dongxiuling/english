.head{
  width: 100%;
 height: 400rpx;
}
.find{
 background: #209e85;
  color: #fff;
}

/* 发布人 */
.index-writer{
  float: left;
  display: flex;
  flex-direction: row;
}
.index-article{
  overflow: hidden;
   display: flex;
  flex-direction: column;
  /* width:90%; */
  margin-top:60rpx;
  border: 2rpx solid #d0d0d0;
  /* box-shadow:0px 0px 5px 5px rgba(0, 0, 0, 0.1)  */
 
}
.index-name{
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  padding-top: 62rpx;
}

.index-title{
  font-weight:600;
}
.head-port{
  width: 100rpx;
  height: 100rpx;
 margin: 30rpx 20rpx 0 30rpx;
}

.content{
  width: 90%;
  height:280rpx;
 border-radius: 10rpx;  
  margin-left: 5%;
   margin-top:160rpx;
  
}
.center{
    text-align: center;   
}
.index-post{
  display: flex;
   justify-content: flex-end;
   padding-right: 30rpx;
   
}
.index-post view{
  width: 80rpx;
  height:60rpx;
  font-size: 24rpx;
  margin: 10rpx 4rpx 10rpx 0;
  text-align: center;
  line-height: 60rpx;
   border: 2rpx solid #d0d0d0; 
   z-index: -1; 
  border-radius: 10rpx;  
}


.index-bottom{
  text-align: center;
  color: white;
  background: #d0d0d0 
}

.publish{
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid white;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  float: right;
  z-index: 2;
  background:#209E85;
  font-size: 30rpx;
  margin: -20rpx 50rpx 0 0;
  color: white;
}
.index-pub{
  opacity: 0.5;
}
